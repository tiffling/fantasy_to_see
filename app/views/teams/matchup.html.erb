<h2>Week <%= @team_presenter.week %> Matchup</h2>
<header class="team-header"><i class="fa fa-flag"></i> <%= @team_presenter.name %> <%= link_to 'view team', team_path(@team_presenter.team) %></header>
<ul class="team">
  <% @team_presenter.starting_players.each do |player| %>
    <li class="<%= player.benched? ? 'benched' : '' %>">
      <%= player.shortened_name %> <%= player.position %>-<%= player.team %>
    </li>
  <% end %>
</ul>
<header class="team-header"><%= @opposing_team_presenter.name %> <%= link_to 'view team', team_path(@opposing_team_presenter.team) %></header>
<ul class="team">
  <% @opposing_team_presenter.starting_players.each do |player| %>
    <li class="<%= player.benched? ? 'benched' : '' %>">
      <%= player.shortened_name %> <%= player.position %>-<%= player.team %>
    </li>
  <% end %>
</ul>

<h2>Games To Watch (Week <%= @team_presenter.week %>)</h2>
<% @matchup_presenters.each do |matchup| %>
  <section class="matchup">
    <header class="team-header">
      <i class="fa fa-television"></i> <%= matchup.header %> @ <%= matchup.kickoff %> EST
    </header>
    <ul class="team">
      <% @matchup_player_filter.matchup_players(matchup.team_names).each do |player| %>
        <li class="player <%= player.owner_team == @team_presenter.team ? 'ally' : 'opponent' %>">
          <%= image_tag player.image, class: 'circle small-icon' %>
          <%= player.matchup_player_blurb %>
        </li>
      <% end %>
    </ul>
  </section>
<% end %>
